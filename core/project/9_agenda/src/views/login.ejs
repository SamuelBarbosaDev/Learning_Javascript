<%- include('./includes/head') %>
<%- include('./includes/header') %>
<main>
    <section class="main-content">
        <h1>Login & Registro</h1>
        <%- include('./includes/messages') %>
        <span class="subtitle">Faça seu cadastro ou entre com sua conta.</span>
        <section class="container-column">
            <form action="/login/sing-up" method="post" class="sing-up">
                <h2>Faça seu Cadastro:</h2>
                <div class="form-field">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <label for="email">E-mail:</label>
                    <input name="email" class="form-input" type="email" id="email">
                </div>
                <div class="form-field">
                    <label for="password">Senha:</label>
                    <input name="password" class="form-input" type="password" id="password">
                </div>
                <button class="btn-form">Enviar</button>
            </form>
            <form action="/login/sing-in" method="post" class="login">
                <h2>Entre com sua conta:</h2>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-field">
                    <label for="email">E-mail:</label>
                    <input id="email" class="form-input" type="email" name="email">
                </div>
                <div class="form-field">
                    <label for="password">Senha:</label>
                    <input id="password" class="form-input" type="password" name="password">
                </div>
                <button class="btn-form">Entrar</button>
            </form>
        </section>
    </section>
</main>
<%- include('./includes/footer') %>
