<%- include('./includes/head') %>
<%- include('./includes/header') %>
<main>
    <section class="main-content">
        <h1>Cadastre um contato</h1>
        <span class="subtitle">Fa√ßa o cadastro do contato abaixo.</span>
        <%- include('./includes/messages') %>
        <section class="contact-content">
            <% if(contact._id){ %>
                <form action="/contact/update/<%= contact._id %>" method="post" class="contact">
            <% } else{ %>
                <form action="/contact/create" method="post" class="contact">
            <% } %>
                <div class="form-field">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <label for="name">Nome:</label>
                    <input name="name" class="form-input" type="text" id="name" value="<%= contact.name %>">
                </div>
                <div class="form-field">
                    <label for="last_name">Sobrenome:</label>
                    <input name="last_name" class="form-input" type="text" id="last_name" value="<%= contact.last_name %>">
                </div>
                <div class="form-field">
                    <label for="phone">Telefone:</label>
                    <input name="phone" class="form-input" type="tel" id="phone" pattern="[0-9]{2}-[0-9]{5}-[0-9]{4}" value="<%= contact.phone %>">
                </div>
                <div class="form-field">
                    <label for="email">E-mail:</label>
                    <input name="email" class="form-input" type="email" id="email" value="<%= contact.email %>">
                </div>
                <button class="btn-form">Enviar</button>
            </form>
        </section>
    </section>
</main>
<%- include('./includes/footer') %>
